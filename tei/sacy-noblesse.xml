			<docTitle>
				<titlePart type="main">LA NOBLESSE</titlePart>
				<titlePart type="sub">DIALOGUE</titlePart>
			</docTitle> 
			<docDate when="1778">M. DCC LXXVIII. Avec Approbation et Privilège du Roi.</docDate>
			<docAuthor>De SACY, Claude-Louis-Michel de</docAuthor><!--@bio=""-->
			<div type="docImprint">
				<div type="printer">
                    <p>À PARIS, Chez DEMONVILLE. Imprimeur-Librairie de l'Académie Française, rue Saint-Severin, aux Armes de Dombes.</p>
                </div><!--@id="DEMONVILLE"-->
			</div>
			<performance>
				<ab type="premiere"/><!--@date=""--><!--@location="(inconnue)"-->
			</performance>
	<castList>
                <head>PERSONNAGES</head>
		<castItem>
                    <role corresp="#monsieur-de-chevert">MONSIEUR DE CHEVERT</role><!--@sex="1"--><!--@type="H"--><!--@statut="aristocrate"--><!--@age="A"--><!--@stat_amour="néant"-->.</castItem>
		<castItem>
                    <role corresp="#un-marquis">UN MARQUIS</role><!--@sex="1"--><!--@type="H"--><!--@statut="marquis"--><!--@age="A"--><!--@stat_amour="néant"-->.</castItem>
