	<castItem>
                    <role corresp="#le-recitant">LE RÉCITANT</role><!--@sex="1"--><!--@type="H"--><!--@statut="conférencier"--><!--@age="A"--><!--@stat_amour="néant"-->, M. COQUELIN-CADET.</castItem> 
	</castList>
