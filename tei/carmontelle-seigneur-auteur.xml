                    <role corresp="#monsieur-ronflant">MONSIEUR RONFLANT</role><!--@sex="1"--><!--@type="H"--><!--@statut="poète"--><!--@age="A"--><!--@stat_amour="néant"-->, Poète tragique.</castItem>
		<castItem>
