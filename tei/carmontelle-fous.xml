        <premiere date="(inconnue)" location="(inconnue)"/>
      </performance>
      <castList>
        <head>PERSONNAGES</head>
        <castItem><role id="MONSIEUR DISSONANT" sex="1" type="H" statut="musicien" age="A" stat_amour="néant">MONSIEUR DISSONANT</role>, Musicien.</castItem>
        <castItem><role id="MONSIEUR L'ABBÉ HYATUS" sex="1" type="H" statut="abbé" age="A" stat_amour="néant">MONSIEUR L'ABBÉ HYATUS</role>, Poète..</castItem>
        <castItem><role id="MONSIEUR DESJARRETS" sex="1" type="H" statut="maître de ballet" age="A" stat_amour="néant">MONSIEUR DESJARRETS</role>, Maître de Ballet.</castItem>
        <castItem><role id="CABRY" sex="1" type="H" statut="danseur" age="A" stat_amour="néant">CABRY</role>, Prévôt de Monsieur Desjarrets.</castItem>
        <castItem><role id="MADAME DOUAIREVILLE" sex="2" type="H" statut="bourgeois" age="A" stat_amour="néant">MADAME DOUAIREVILLE</role>, Plaideuse.</castItem>
        <castItem><role id="UN GARÇON CAFFETIER" sex="1" type="H" statut="employé" age="A" stat_amour="néant">[U]N GARÇON CAFFETIER.</role>.</castItem>
