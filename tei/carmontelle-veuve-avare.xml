	<front>
		<docTitle>
			<titlePart type="main">LA VEUVE AVARE</titlePart>
			<titlePart type="main">ou À TROMPEUR TROMPEUR ET DEMI</titlePart>
			<titlePart type="sub">PROVERBE DRAMATIQUE.</titlePart>
			
		</docTitle> 
		<docDate when="1768">1768</docDate>
		<docAuthor>de CARMONTELLE.</docAuthor>
		<performance>
			<ab type="premiere"/>
		</performance>
	<castList>
                <head>PERSONNAGES</head>
		<castItem>
                    <role corresp="#monsieur-renaud-du-bouloir">MONSIEUR RENAUD DU BOULOIR</role>, avocat.</castItem>
		<castItem>
                    <role corresp="#madame-de-rupert">MADAME DE RUPERT</role>, veuve.</castItem>
		<castItem>
                    <role corresp="#le-chevalier-de-saint-rieul">LE CHEVALIER DE SAINT-RIEUL</role>.</castItem>
		<castItem>
                    <role corresp="#lapierre">LAPIERRE</role>, laquais de M. du Bouloir.</castItem>
   </castList>
