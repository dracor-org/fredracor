		<docTitle>
			<titlePart type="main">LE CHIEN DE LA FOIRE</titlePart>
			<titlePart type="sub">COMÉDIE.</titlePart>
			<titlePart type="sub">TRENTE et UNIÈME PROVERBE.</titlePart>
		</docTitle> 
		<docDate when="1783">M. DCC. LXXXIII. Avec approbation et privilège du Roi</docDate>
		<docAuthor>de CARMONTELLE.</docAuthor>
		<!--<docImprint>-->
