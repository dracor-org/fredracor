	<front>
		<docTitle>
			<titlePart type="main">ADÉLAÏDE</titlePart>
			<titlePart type="main">OU LES COMBATS DE L'AMOUR ET DU PRÉJUGÉ</titlePart>
			<titlePart type="sub">DRAME EN UN ACTE</titlePart>
			<titlePart type="sub">DIX-NEUVIÈME PROVERBE.</titlePart>
		</docTitle> 
		<docDate when="1785">M. DCC. LXXXV.</docDate>
		<docAuthor>Par MONSIEUR G***.</docAuthor><!--@bio="garnier"-->
		<div type="docImprint">
			<div type="printer">
                    <p>À LIÈGE, Chez F.J. DESOER, Imprimeur-Libraire, sur le Pont d'Isle, à la Croix d'Or.</p>
                </div><!--@id="JORRY"-->
		</div>
	<castList>
                <head>PERSONNAGES</head>
		<castItem>
                    <role corresp="#adelaïde">ADÉLAÏDE</role><!--@sex="2"--><!--@type="H"--><!--@statut="aristocrate"--><!--@age="J"--><!--@stat_amour="néant"-->, jeune veuve.</castItem>
		<castItem>
                    <role corresp="#le-comte-d-oronville">LE COMTE D'ORONVILLE</role><!--@sex="1"--><!--@type="H"--><!--@statut="comte"--><!--@age="A"--><!--@stat_amour="néant"-->, sous le nom de Dorval.</castItem>
		<castItem>
                    <role corresp="#le-baron-de-fontalbanne">LE BARON DE FONTALBANNE</role><!--@sex="1"--><!--@type="H"--><!--@statut="baron"--><!--@age="J"--><!--@stat_amour="néant"-->.</castItem>
		<castItem>
                    <role corresp="#justine">JUSTINE</role><!--@sex="2"--><!--@type="H"--><!--@statut="suivante"--><!--@age="J"--><!--@stat_amour="néant"-->.</castItem>
		<castItem>
                    <role corresp="#la-fleur">LA FLEUR</role><!--@sex="1"--><!--@type="H"--><!--@statut="laquais"--><!--@age="A"--><!--@stat_amour="néant"-->.</castItem>
