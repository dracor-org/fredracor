    <front>
      <docTitle>
        <titlePart type="main">FARCE NOUVELLE TRÈS BONNE ET FORT JOYEUSE DE LA RESURRECTION DE JENIN LANDORE</titlePart>
        <titlePart type="sub">À quatre personnages, c'est à savoir</titlePart>
      </docTitle>
      <docDate value="v.1500"/>
      <docAuthor id="[Anonyme]"/>
      <performance>
        <premiere date="(inconnue)" location="(inconnue)"/>
      </performance>
      <castList>
        <head>ACTEURS</head>
        <castItem><role id="JENIN" sex="1" type="H" statut="bourgeois" age="A" stat_amour="néant">JENIN</role>.</castItem>
        <castItem><role id="SA FEMME" sex="2" type="H" statut="bourgeois" age="A" stat_amour="néant">SA FEMME</role>.</castItem>
        <castItem><role id="LE CURÉ" sex="1" type="H" statut="curé" age="A" stat_amour="néant">LE CURÉ</role>.</castItem>
        <castItem><role id="LE CLERC" sex="1" type="H" statut="clerc" age="A" stat_amour="néant">LE CLERC</role>.</castItem>
