		<castItem>
                    <role corresp="#rose">ROSE</role><!--@sex="2"--><!--@type="H"--><!--@statut="enfant"--><!--@age="E"--><!--@stat_amour="(néant)"-->, 7 ans.</castItem>
		<castItem>
                    <role corresp="#rosette">ROSETTE</role><!--@sex="2"--><!--@type="H"--><!--@statut="enfant"--><!--@age="E"--><!--@stat_amour="(néant)"-->, 7 ans.</castItem>
		<castItem>
                    <role corresp="#madame-de-lancy">MADAME DE LANCY</role><!--@sex="2"--><!--@type="H"--><!--@statut="aristocrate"--><!--@age="E"--><!--@stat_amour="(néant)"-->, mère de Rose.</castItem>
   </castList>
