		<castItem>
                    <role corresp="#renee">RENÉE</role><!--@sex="2"--><!--@type="H"--><!--@statut="enfant"--><!--@age="E"--><!--@stat_amour="(néant)"-->, ll ans.</castItem>
		<castItem>
                    <role corresp="#gabrielle">GABRIELLE</role><!--@sex="2"--><!--@type="H"--><!--@statut="enfant"--><!--@age="E"--><!--@stat_amour="(néant)"-->, 10 ans.</castItem>
		<castItem>
