			<castItem>
                    <role corresp="#bobechotte">BOBÉCHOTTE</role><!--@sex="2"--><!--@type="H"--><!--@statut="bourgeois"--><!--@age="A"--><!--@stat_amour="néant"-->.</castItem>
		</castList>
