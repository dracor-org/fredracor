		<castItem>
                    <role corresp="#madame-goursain">MADAME GOURSAIN</role><!--@sex="2"--><!--@type="H"--><!--@statut="commerçant"--><!--@age="A"--><!--@stat_amour="néant"-->, marchande de galons.</castItem>
		<castItem>
                    <role corresp="#monsieur-goursain">MONSIEUR GOURSAIN</role><!--@sex="1"--><!--@type="H"--><!--@statut="commerçant"--><!--@age="A"--><!--@stat_amour="néant"-->, son mari.</castItem>
		<castItem>
                    <role corresp="#madame-merigon">MADAME MÉRIGON</role><!--@sex="2"--><!--@type="H"--><!--@statut="commerçant"--><!--@age="A"--><!--@stat_amour="néant"-->, marchande de drap.</castItem>
		<castItem>
                    <role corresp="#monsieur-merigon">MONSIEUR MÉRIGON</role><!--@sex="1"--><!--@type="H"--><!--@statut="commerçant"--><!--@age="A"--><!--@stat_amour="néant"-->, son mari.</castItem>
		<castItem>
                    <role corresp="#monsieur-morandal">MONSIEUR MORANDAL</role><!--@sex="1"--><!--@type="H"--><!--@statut="intendant"--><!--@age="A"--><!--@stat_amour="néant"-->, Intendant de Maison.</castItem>
		<castItem>
                    <role corresp="#monsieur-renard">MONSIEUR RENARD</role><!--@sex="1"--><!--@type="H"--><!--@statut="procureur"--><!--@age="A"--><!--@stat_amour="néant"-->, procureur au Chatelet.</castItem>
	</castList>
