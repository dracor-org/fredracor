    <front>
      <docTitle>
        <titlePart type="main">LE PEINTRE EN CUL-DE-SAC.</titlePart>
        <titlePart type="sub">COMÉDIE.</titlePart>
        <titlePart type="sub">VINGT SEPTIÈME PROVERBE.</titlePart>
      </docTitle>
      <docDate value="1822">1822.</docDate>
      <docAuthor id="CARMONTELLE, Louis de" bio="carmontelle">de CARMONTELLE.</docAuthor>
      <docImprint>
        <printer id="DELONCHAMPS">À PARIS, chez DELONGCHAMPS, LIBRAIRE RUE DE LA FEUILLADE, n°2, près de la Place des Victoires.</printer>
      </docImprint>
