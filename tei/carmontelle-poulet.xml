			<ab type="premiere"/>
		</performance>
	<castList>
                <head>PERSONNAGES</head>
		<castItem>
                    <role corresp="#monsieur-d-orville">MONSIEUR D'ORVILLE</role>.</castItem>
		<castItem>
                    <role corresp="#monsieur-fremont">MONSIEUR FRÉMONT</role>, médecin.</castItem>
		<castItem>
                    <role corresp="#la-brie">LA BRIE</role>, laquais de Monsieur d'Orville.</castItem>
		<castItem>
                    <role corresp="#comtois">COMTOIS</role>, laquais de Monsieur d'Orville.</castItem>
	</castList>
