	<front>
		<docTitle>
			<titlePart type="main">LES FAUX INDIFFÉRENTS</titlePart>
			<titlePart type="sub">SEPTIÈME PROVERBE.</titlePart>
		</docTitle> 
		<docDate when="1771">M. DCC. LXVIII. Avec Approbation et Privilège du Roi.</docDate>
		<docAuthor>de CARMONTELLE.</docAuthor><!--@bio="carmontelle"-->
