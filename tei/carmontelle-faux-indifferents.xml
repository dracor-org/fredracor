		<castItem>
                    <role corresp="#la-comtesse">LA COMTESSE</role><!--@sex="2"--><!--@type="H"--><!--@statut="comte"--><!--@age="A"--><!--@stat_amour="néant"-->.</castItem>
		<castItem>
                    <role corresp="#le-chevalier">LE CHEVALIER</role><!--@sex="1"--><!--@type="H"--><!--@statut="chevalier"--><!--@age="A"--><!--@stat_amour="néant"-->.</castItem>
		<castItem>
                    <role corresp="#henriette">HENRIETTE</role><!--@sex="2"--><!--@type="H"--><!--@statut="femme de chambre"--><!--@age="A"--><!--@stat_amour="néant"-->, Femme de Chambre de la Comtesse.</castItem>
