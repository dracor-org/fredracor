		<docTitle>
			<titlePart type="main">UN COUP DE RASOIR</titlePart>
			<titlePart type="sub">SAYNÈTE</titlePart>
		</docTitle> 
		<docDate when="1881">1881.</docDate>
		<docAuthor>PAR M. EUGÈNE LABICHE.</docAuthor>
		<!--<docImprint>-->
            <docImprint>À PARIS, TRESSE, Galerie du Théâtre Français, PALAIS-ROYAL.</docImprint><!--</docImprint>-->
	<castList>
                <head>PERSONNAGES</head>
		<castItem>
                    <role corresp="#antenor">ANTÉNOR</role>.</castItem> 
		<castItem>
                    <role corresp="#gavot">GAVOT</role>.</castItem> 
	</castList>
