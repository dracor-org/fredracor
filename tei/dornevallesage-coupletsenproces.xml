        <castItem><role id="LE MITRON DE GONESSE" sex="1" type="H" statut="allégorie" age="A" stat_amour="néant">LE MITRON DE GONESSE</role>, vieux couplet dansant.</castItem>
        <castItem><role id="MAROTTE MIGNONNE" sex="1" type="H" statut="allégorie" age="A" stat_amour="néant">MAROTTE MIGNONNE</role>, vieux couplet chantant.</castItem>
        <castItem><role id="PIERRE BAGNOLET" sex="1" type="H" statut="allégorie" age="A" stat_amour="néant">PIERRE BAGNOLET</role>, vieux couplet chantant.</castItem>
        <castItem><role id="LA BELLE DIGUEDON" sex="1" type="H" statut="allégorie" age="A" stat_amour="néant">LA BELLE DIGUEDON</role>, vieux couplet chantant.</castItem>
