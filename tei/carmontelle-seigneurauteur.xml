      <docTitle>
        <titlePart type="main">LE SEIGNEUR AUTEUR</titlePart>
        <titlePart type="sub">COMÉDIE PROVERBE</titlePart>
      </docTitle>
      <docDate value="1768">M DCC LXVIII.</docDate>
      <docAuthor id="CARMONTELLE, Louis de" bio="carmontelle">de CARMONTELLE.</docAuthor>
      <docImprint>
        <premiere date="(inconnue)" location="(inconnue)"/>
      </docImprint>
