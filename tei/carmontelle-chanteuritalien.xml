        <premiere date="1768" location="chez Madame la Marquise de Mauconseil">Représenté pour la première fois en 1768 à Bagatelle chez Madame la Marquise de Mauconseil.</premiere>
      </performance>
      <castList>
        <head>PERSONNAGES</head>
        <castItem><role id="MONSIEUR DE SAINT HYGIN" sex="1" type="H" statut="aristocrate" age="A" stat_amour="néant">MONSIEUR DE SAINT HYGIN</role>.</castItem>
        <castItem><role id="MADEMOISELLE DE SAINT HYGIN" sex="2" type="H" statut="aristocrate" age="J" stat_amour="néant">MADEMOISELLE DE SAINT HYGIN</role>, fille de Monsieur de Saint Hygin.</castItem>
        <castItem><role id="MONSIEUR DELAMARRE" sex="1" type="H" statut="bourgeois" age="A" stat_amour="néant">MONSIEUR DELAMARRE</role>.</castItem>
        <castItem><role id="MONSIEUR OCTAVINI" sex="1" type="H" statut="musicien" age="A" stat_amour="néant">MONSIEUR OCTAVINI</role>, musicien italien.</castItem>
