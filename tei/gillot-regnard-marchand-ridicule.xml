<front>
	<docTitle>
	  <titlePart type="main">LE MARCHAND RIDICULE</titlePart>
   	<titlePart type="sub">COMÉDIE EN UN ACTE</titlePart> 
	</docTitle>
   <docDate when="1695">1695</docDate>
   <docAuthor>par Gillot et Regnard</docAuthor><!--@bio="regnard"-->
	<div type="docImprint">
		<div type="privilege"/><!--@id="16**-**-**"-->
		<div type="acheveImprime">
